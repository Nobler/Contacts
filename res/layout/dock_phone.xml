<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dock_bg" >

    <LinearLayout
        android:id="@+id/dial_pad_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:clickable="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialer"
            android:contentDescription="@string/image_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dial_pad_down"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_bg"
        android:clickable="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialer"
            android:contentDescription="@string/image_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clear_input"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_bg"
        android:clickable="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clear_input"
            android:contentDescription="@string/image_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/call"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/clear_input"
        android:layout_toRightOf="@id/dial_pad_down"
        android:layout_toEndOf="@id/dial_pad_down"
        android:layout_toStartOf="@id/clear_input"
        android:background="@drawable/call_out_green"
        android:clickable="true"
        android:gravity="center"
        android:padding="1dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call_out"
            android:contentDescription="@string/image_description" />
    </LinearLayout>

</RelativeLayout>